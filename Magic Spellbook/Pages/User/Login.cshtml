@page
@model Magic_Spellbook.Pages.User.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <section>
            <form id="account" method="post">
                <h2>Login Using Magic Spellbook Account</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input class="form-control" autocomplete="username" aria-required="true" placeholder="" />
                    <label class="form-label">Username</label>
                    <span class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label class="form-label">Password</label>
                    <span class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label class="form-label">
                        <input class="form-check-input" />
                        Remember me?
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" >Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>