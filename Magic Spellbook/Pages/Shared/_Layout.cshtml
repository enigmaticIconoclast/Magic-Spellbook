<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Magic Spellbook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Magic_Spellbook.styles.css" asp-append-version="true" />
</head>
<body >
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: saddlebrown;">
            <div class="container">
                <a class="navbar-brand text-light" asp-area="" asp-page="/Index">Magic Spellbook</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="navbarCollectionDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Collection
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarCollectionDropdown">
                                <a class="dropdown-item" asp-area="" asp-page="/Cards/Cardcollection">Card Collection</a>
                                <a class="dropdown-item" asp-area="" asp-page="/Exports/CollectionExport">Export Collection</a>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="navbarCollectionDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Cards
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarCollectionDropdown">
                                <a class="dropdown-item" asp-area="" asp-page="/Cards/CardDetails">Random Card</a>
                                <a class="dropdown-item" asp-area="" asp-page="/Cards/CardSearch">Card Search</a>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDecksDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Decks
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarCollectionDropdown">
                                <a class="dropdown-item" asp-area="" asp-page="/Decks/NewDeck">New Deck</a>
                                <a class="dropdown-item" asp-area="" asp-page="/Exports/DecklistsExports">Export Decklists</a>
                                <a class="dropdown-item" asp-area="" asp-page="/Decks/DeckLists">Decklists</a>
                            </ul>
                        </li>   
                    </ul>
                </div>
                <ul class="navbar-nav float-end">
                    <li class="dropdown">
                        <a class="nav-link dropdown-toggle text-light float-right" href="#" id="navbarDecksDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            User
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarCollectionDropdown">
                            <a class="dropdown-item" asp-area="" asp-page="/User/Login">Login</a>
                            <a class="dropdown-item" asp-area="" asp-page="/User/Register">Register</a>
                            <a class="dropdown-item" asp-area="" asp-page="/User/Logout">Logout</a>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Magic_Spellbook - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>